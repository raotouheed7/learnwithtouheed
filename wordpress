<?php
/*
Plugin Name: Custom Greeting Shortcode
Description: A simple WordPress plugin to display a greeting message using a shortcode.
Version: 1.0
Author: Your Name
*/

// Define the shortcode function
function custom_greeting_shortcode() {
    return 'Hello, welcome to our website!';
}

// Register the shortcode
add_shortcode('greeting', 'custom_greeting_shortcode');
?>
